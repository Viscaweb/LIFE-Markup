{% extends "layouts/3_columns.html.twig" %}


{% block container_content_wrapper %}
    <div class="row">
        <div class="col-md-6">
            <button type="button" class="btn btn-default showtoast" data-message="FC Barcelona was added to your Teams" data-alert="success" >SUCCESS</button>
            <button type="button" class="btn btn-default showtoast" data-title="Notification title" data-message="This is the message" data-alert="warning" >WARNING</button>
            <button type="button" class="btn btn-default showtoast" data-title="Notification title" data-message="This is the message" data-alert="info" >INFO</button>
            <button type="button" class="btn btn-default showtoast" data-title="Notification title" data-message="This is the message" data-alert="error" >ERROR</button>
    </div>

{% endblock %}

