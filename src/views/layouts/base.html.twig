<!DOCTYPE html>
<html>
<head>

    {% block resources_header %}
        {% include 'blocks/commons/head.html.twig' %}
    {% endblock %}

</head>
{% if body_classes %}
    {% set body_classes = 'class="' ~ body_classes|join(' ') ~ '"' %}
{% endif %}
<body {{ body_classes|raw }}>

{% block body %}

    {% block container_header %}
        {% include 'blocks/commons/header.html.twig' %}
    {% endblock %}

    <div class="container{{ containerFluid }}">
        {% if top_banner %}
            {% if top_banner_classes %}
                {% set top_banner_classes = top_banner_classes|join(' ') %}
            {% endif %}
            <div class="panel visual-top {{ top_banner_classes }}">
                <div>
                    <!-- Content Ad Space -->
                    <img src="{{ basePath }}img/728x90.png" alt="Visual Block">
                </div>
            </div>
        {% endif %}
        {% block container_content_before %}
        {% endblock %}
        <div class="wrapper row">
            {% block container_content %}
                {# page content #}
            {% endblock %}
        </div>
        {% block container_content_after %}
        {% endblock %}
    </div>

    {% block container_footer %}

    {% endblock %}

{% endblock %}

{% block resources_footer %}
    {% include 'blocks/commons/scripts.html.twig' %}
{% endblock %}

{% block after_scripts %}
{% endblock %}

</body>
</html>
