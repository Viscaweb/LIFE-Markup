{# Modal structure #}
<div class="modal fade {{ modal_classes }}" id="{{ modal_id }}">
    <div class="modal-dialog">
        <div class="modal-content">
            {% set _header = block('modal_header') %}
            {% if _header is not empty %}
                <div class="modal-header">
                    {% block modal_header %}{% endblock %}
                </div>
            {% endif %}

            <div class="modal-body">
                {% block modal_content %}
                    {# Content of the modal #}
                {% endblock %}
            </div>

            {% set _footer = block('modal_footer') %}
            {% if _footer is not empty %}
                <div class="modal-footer">
                    {% block modal_footer %}{% endblock %}
                </div>
            {% endif %}

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->