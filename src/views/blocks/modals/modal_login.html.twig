<!-- LOGIN MODAL -->
<div class="modal fade login login-modal" id="login-main">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Login or Register</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" role="alert">[ CUSTOM MESSAGE ] Please log in or create a free account in order to use this function.</div>

                <div class="row">
                    <div class="col-sm-6">
                        <a href="#" class="login-image">
                            <img src="img/290x380.jpg" alt="Visual Block">
                        </a>
                    </div>
                    <div class="col-sm-6">
                        <!-- LOGIN BLOCK -->
                        <div class="btn-group btn-group-justified">
                            <a class="btn btn-primary" href="#">Login</a>
                            <a class="btn btn-default" href="#">New User</a>
                        </div>
                        <div class="tab-content">
                            <div class="tab-pane active">
                                <div class="login-facebook">
                                    <button type="button" class="btn btn-facebook"><i class="icon icon-facebook"></i>Login with Facebook</button>
                                </div>
                                <div class="divider">
                                    <span>or sign in using your account details</span>
                                </div>
                                <form class="form-horizontal" role="form">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <label>Email / Name</label>
                                            <input type="text" class="form-control" placeholder="Your login email or name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <a href="#" class="forgot-password-link">Forgot you password?</a>
                                            <label>Password</label>
                                        </div>
                                        <div class="col-md-12">
                                            <input type="password" class="form-control" placeholder="Password">

                                        </div>
                                    </div>
                                    <div class="checkbox">
                                        <input id="remember-check1" type="checkbox" checked="">
                                        <label for="remember-check1">Remember me</label>
                                    </div>
                                    <button type="button" class="btn btn-primary">Sign in</button>
                                </form>
                            </div>
                        </div>

                        <hr>

                    </div>
                </div>


            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->