{# Avatar change Modal #}
{% extends 'blocks/containers/modal.html.twig' %}

{% set modal_classes = '' %}
{% set modal_id = 'modal-profile-image' %}
{% set modal_body_classes = 'modal-body-no-padding change-profile-image' %}

{% block modal_header %}
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">Change Profile picture</h4>
{% endblock %}

{% block modal_content %}
    <div class="row">
        <div class="col-md-3 left-side">
            <div class="current-image">
                <img class="image-circle" src="{{ basePath }}img/profile-img.jpg" alt="Profile Image">
                <span class="nick-name">sebastien au.</span>
            </div>
        </div>
        <div class="col-md-9 options">
            <div class="avatars-list predefined-images">
                <label>Pre-defined</label>
                <div class="scroll-container">
                    <ul>
                        <li>
                            <a href="#">
                                <div class="img">
                                    <img class="img-circle" src="{{ basePath }}img/user-default.png" alt="Avatar">
                                </div>
                                <span class="name">Blank</span>
                            </a>
                        </li>
                        <li class="selected-image">
                            <a href="#">
                                <div class="img">
                                    <img class="img-circle" src="{{ basePath }}img/profile-img.jpg" alt="Profile Image">
                                </div>
                                <span class="name">Facebook</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="custom-picture">
                <label>Custom picture</label>
                <div class="row">
                    <div class="col-sm-2">
                        <div class="img">
                            <img class="add-file" src="{{ basePath }}img/user-dashboard/add-file.png" alt="Add File">
                        </div>
                    </div>
                    <div class="col-sm-10">
                        <div class="drag-zone">
                            <div class="drag-message">
                                <span>Drag picture here or</span>
                                <button type="button" class="btn btn-primary"><span class="icon glyphicon glyphicon-camera"></span>Select Picture</button>
                            </div>
                            <div class="drop-message">
                                <span class="icon glyphicon glyphicon-circle-arrow-up"></span> Drop image here
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="avatars-list my-teams">
                <label>My Teams</label>
                <div class="scroll-container">
                    <ul>
                        <li><a href=""><div class="logo"><img src="{{ basePath }}img/sprites/realmadrid.png" alt="Real Madrid"></div><span class="name">Real M.</span></a></li>
                        <li><a href=""><div class="logo"><img src="{{ basePath }}img/sprites/realmadrid.png" alt="Real Madrid"></div><span class="name">Real M.</span></a></li>
                        <li><a href=""><div class="logo"><img src="{{ basePath }}img/sprites/realmadrid.png" alt="Real Madrid"></div><span class="name">FC Barcelona</span></a></li>
                        <li><a href=""><div class="logo"><img src="{{ basePath }}img/sprites/realmadrid.png" alt="Real Madrid"></div><span class="name">Long name of a team</span></a></li>
                        <li><a href=""><div class="logo"><img src="{{ basePath }}img/sprites/realmadrid.png" alt="Real Madrid"></div><span class="name">Real M.</span></a></li>
                        <li><a href=""><div class="logo"><img src="{{ basePath }}img/sprites/realmadrid.png" alt="Real Madrid"></div><span class="name">Real M.</span></a></li>
                        <li><a href=""><div class="logo"><img src="{{ basePath }}img/sprites/realmadrid.png" alt="Real Madrid"></div><span class="name">Real M.</span></a></li>
                        <li><a href=""><div class="logo"><img src="{{ basePath }}img/sprites/realmadrid.png" alt="Real Madrid"></div><span class="name">Real M.</span></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block modal_footer %}
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="button" class="btn btn-primary">Save changes</button>
{% endblock %}