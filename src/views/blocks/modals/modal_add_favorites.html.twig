
{# Adding favorites Modal #}
{% extends 'blocks/containers/modal.html.twig' %}

{% set modal_classes = '' %}
{% set modal_id = 'modal-window' %}

{% block modal_header %}
    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
    <h4 class="modal-title">Add League</h4>
{% endblock %}

{% block modal_content %}
    <div class="row">
        <div class="col-xs-12">
            <label>Type here to search a competition :</label>
            <div class="inner-addon right-addon">
                <i class="glyphicon glyphicon-search"></i>
                <input data-toggle="dropdown" type="text" placeholder="Champions League, Europa League..." class="form-control">

                {{ include('blocks/search/search_suggest_dropdown.html.twig', {type: 'leagues'}) }}

            </div>
            <div class="divider"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <table class="table table-striped no-border league-selection">
                <tbody>
                <tr>
                    <td class="flag"><div class="icon-placeholder icon-placeholder--flag"><span class="country-flag fr"></span></div></td>
                    <td class="name">Ligue 1 (Football, France)</td>
                    <td class="functions"><a class="btn btn-danger btn-sm">Delete</a></td>
                </tr>
                <tr>
                    <td class="flag"><div class="icon-placeholder icon-placeholder--flag"><span class="country-flag _England"></span></div></td>
                    <td class="name">Premier League (Football, England)</td>
                    <td class="functions"><a class="btn btn-danger btn-sm">Delete</a></td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block modal_footer %}
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="button" class="btn btn-primary">Add Leagues</button>
{% endblock %}
