<div class="panel panel-default goal-stats">
    <div class="panel-heading">
        Goal Stats
    </div>
    <div class="panel-body">
        <div class="row stats-holder">
            <div class="col-sm-6 stat-block">
                <div class="scored">
                    <i class="icon icon-football"></i>
                    <span>69</span>
                    <p>Scored</p>
                </div>
            </div>
            <div class="col-sm-6 stat-block">
                <div class="conceded">
                    <i class="icon icon-football"></i>
                    <span>23</span>
                    <p>Conceded</p>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-condensed layout-fixed">
        <colgroup>
            <col class="goals-gauge">
            <col class="goals-number">
            <col class="minute-range">
            <col class="goals-number">
            <col class="goals-gauge">
        </colgroup>
        <tbody>
        <tr>
            <th class="text-right" colspan="2">Scored</th>
            <th class="text-center">Min</th>
            <th colspan="2">Conceded</th>
        </tr>
        <tr>
            <td class="prog">
                <div class="progress">
                    <div class="progress-bar progress-bar-success" style="width: 30%"></div>
                </div>
            </td>
            <td class="percent">8</td>
            <td class="minute-range">1 - 15</td>
            <td class="percent">3</td>
            <td class="prog">
                <div class="progress">
                    <div class="progress-bar progress-bar-danger" style="width: 20%"></div>
                </div>
            </td>
        </tr>
        <tr>
            <td class="prog">
                <div class="progress">
                    <div class="progress-bar progress-bar-success" style="width: 40%"></div>
                </div>
            </td>
            <td class="percent">9</td>
            <td class="minute-range">16 - 30</td>
            <td class="percent">2</td>
            <td class="prog">
                <div class="progress">
                    <div class="progress-bar progress-bar-danger" style="width: 10%"></div>
                </div>
            </td>
        </tr>
        <tr>
            <td class="prog">
                <div class="progress">
                    <div class="progress-bar progress-bar-success" style="width: 50%"></div>
                </div>
            </td>
            <td class="percent">10</td>
            <td class="minute-range">31 - 45</td>
            <td class="percent">6</td>
            <td class="prog">
                <div class="progress">
                    <div class="progress-bar progress-bar-danger" style="width: 30%"></div>
                </div>
            </td>
        </tr>
        <tr>
            <th colspan="5" class="text-center"><b>Half time</b></th>
        </tr>
        <tr>
            <td class="prog">
                <div class="progress">
                    <div class="progress-bar progress-bar-success" style="width: 45%"></div>
                </div>
            </td>
            <td class="percent">9</td>
            <td class="minute-range">46 - 60</td>
            <td class="percent">0</td>
            <td class="prog">
                <div class="progress">
                    <div class="progress-bar progress-bar-danger" style="width: 0%"></div>
                </div>
            </td>
        </tr>
        <tr>
            <td class="prog">
                <div class="progress">
                    <div class="progress-bar progress-bar-success" style="width: 0%"></div>
                </div>
            </td>
            <td class="percent">0</td>
            <td class="minute-range">61 - 75</td>
            <td class="percent">3</td>
            <td class="prog">
                <div class="progress">
                    <div class="progress-bar progress-bar-danger" style="width: 15%"></div>
                </div>
            </td>
        </tr>
        <tr>
            <td class="prog">
                <div class="progress">
                    <div class="progress-bar progress-bar-success" style="width: 70%"></div>
                </div>
            </td>
            <td class="percent">16</td>
            <td class="minute-range">76 - 90+</td>
            <td class="percent">6</td>
            <td class="prog">
                <div class="progress">
                    <div class="progress-bar progress-bar-danger" style="width: 30%"></div>
                </div>
            </td>
        </tr>
        </tbody>
    </table>
</div>