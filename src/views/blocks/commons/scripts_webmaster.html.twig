<script type="text/javascript">
    $( document ).ready(function() {

        /*Wizard*/
        $('#rootwizard').bootstrapWizard();
        $('#rootwizard').bootstrapWizard();

        /*Color Picker*/
        $('input.color-picker').colorpicker({
            colorFormat: '#HEX',
            select: function(event, color){
                var input = $(this);
                input.parent().find(".input-group-addon .color-preview").css({ 'background-color' : color.formatted });
            }
        });

        $('.input-group.color-picker .color-preview').click(function( e ){
            e.stopPropagation();
            var colorPicker = $(this).parents(".input-group.color-picker").find("input.color-picker");
            colorPicker.colorpicker('open');
        });

    });
</script>